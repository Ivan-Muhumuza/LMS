<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="680.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lms.controller.LoginController">

    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="errorMessage" textFill="red" />
    </VBox>
     <TextField fx:id="emailField" layoutX="210.0" layoutY="272.0" prefHeight="37.0" prefWidth="231.0" promptText="Email">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding></TextField>
     <Label layoutX="277.0" layoutY="159.0" prefHeight="49.0" prefWidth="96.0" style="-fx-font-size: 24px;" text="LOGIN">
      <font>
         <Font size="16.0" />
      </font></Label>
     <PasswordField fx:id="passwordField" layoutX="210.0" layoutY="346.0" prefHeight="37.0" prefWidth="231.0" promptText="Password">
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding></PasswordField>
     <Button fx:id="loginButton" layoutX="285.0" layoutY="428.0" onAction="#handleLogin" prefHeight="37.0" prefWidth="81.0" text="Login" />

</AnchorPane>
