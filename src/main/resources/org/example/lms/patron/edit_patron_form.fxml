<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="485.0" prefWidth="490.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lms.controller.patron.EditPatronController">
    <bottom>
        <VBox alignment="CENTER" prefHeight="505.0" prefWidth="562.0" spacing="10" BorderPane.alignment="CENTER">
            <TextField fx:id="nameField" promptText="Name">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            </TextField>
            <TextField fx:id="emailField" promptText="Email">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            </TextField>
            <TextField fx:id="patronIDField" editable="false" promptText="Patron ID">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            </TextField>
            <Button onAction="#handleEditPatron" prefHeight="40.0" prefWidth="136.0" text="Save Changes" />
            <padding>
                <Insets left="18.0" right="18.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>
